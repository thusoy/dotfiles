set autoread
set autoindent
set ignorecase
set incsearch
set encoding=utf8
set nobackup
set nowb
set noswapfile
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set pastetoggle=<F2>
map <space> /
map <c-space> ?
syntax on

set incsearch
set laststatus=2
set ruler
set wildmenu
set scrolloff=1
set sidescrolloff=5

" Add the g flag to search/replace by default
set gdefault

" Use UTF-8 without BOM
set encoding=utf-8 nobomb

" Turn off mouse-awareness as it messes with system copy/paste
set mouse-=a
