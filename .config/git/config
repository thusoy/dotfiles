[user]
    email = git@thusoy.com
    name = Tarjei Hus√∏y
[core]
    input = auto
    eol = lf
    autocrlf = input
    excludesfile = "~/.config/git/ignore"
    whitespace=tab-in-indent
    pager = less -FRX
[commit]
    gpgsign = true
[alias]
    st = status
    co = checkout
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort
    rbs = rebase --skip
    cp = cherry-pick
    cpc = cherry-pick --continue
    cpa = cherry-pick --abort
    cps = cherry-pick --skip
    pusho = "!git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)"
    pushf = push --force-with-lease
    s = show --show-notes=*
    log = log --show-notes=*
    br = branch
    ci = commit
    cim = commit -m
    df = diff -C
    dfc = diff --cached -C
    # If any of the branch helpers gets messed up due to changing the main branch, reload them with `git remote set-head origin -a`
    # diff branch
    db = "!git diff -C $(git merge-base $(git symbolic-ref refs/remotes/origin/HEAD | cut -d/ -f4-) HEAD) HEAD"
    # diff week
    dw = "!git diff $(git log --format='%H' --since $(python -c \"import datetime; print((datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))\") | tail -1)..HEAD"
    # log branch
    lb = "!git log --oneline $(git symbolic-ref refs/remotes/origin/HEAD | cut -d/ -f4-)..HEAD"
    # log week
    lw = "!git log --oneline --since $(python -c \"import datetime; print((datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))\")"
    lg = log -p
    l = log --oneline
    lga = log --graph --all --oneline
    fix = commit --amend
    plr = pull --rebase

    # Creds to http://stackoverflow.com/a/39086325/5590192
    ignore = update-index --skip-worktree
    unignore = update-index --no-skip-worktree
    ignored = "!git ls-files -v | grep '^S'"
[push]
    default = simple
[rebase]
    autosquash = true
    autoStash = true
[merge]
	conflictstyle = diff3
